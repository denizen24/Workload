{
  "title": "Workload Calendar Settings",
  "type": "object",
  "properties": {
    "projects": {
      "type": "array",
      "title": "Проекты по умолчанию (ID или ключ)",
      "items": { "type": "string" }
    },
    "issueQuery": {
      "type": "string",
      "title": "Дополнительный YouTrack query",
      "default": ""
    },
    "startDateField": {
      "type": "string",
      "title": "Поле даты начала",
      "default": "Start date"
    },
    "endDateField": {
      "type": "string",
      "title": "Поле даты окончания",
      "default": "Due date"
    },
    "estimateField": {
      "type": "string",
      "title": "Поле оценки",
      "default": "Estimation"
    },
    "qaField": {
      "type": "string",
      "title": "Поле QA оценки",
      "default": "QA"
    },
    "spField": {
      "type": "string",
      "title": "Поле SP оценки",
      "default": "SP"
    },
    "releaseField": {
      "type": "string",
      "title": "Поле релиза",
      "default": "Release"
    },
    "typeField": {
      "type": "string",
      "title": "Поле типа задачи",
      "default": "Type"
    },
    "statusField": {
      "type": "string",
      "title": "Поле статуса",
      "default": "State"
    },
    "assigneeField": {
      "type": "string",
      "title": "Поле исполнителя (для обновления)",
      "default": "Assignee"
    },
    "defaultHorizonDays": {
      "type": "number",
      "title": "Горизонт календаря (дней)",
      "default": 90
    },
    "maxIssues": {
      "type": "number",
      "title": "Лимит задач на проект",
      "default": 500
    },
    "defaultSprints": {
      "type": "array",
      "title": "Спринты по умолчанию",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "title": "Название" },
          "start": { "type": "string", "title": "Дата начала" },
          "end": { "type": "string", "title": "Дата окончания" }
        },
        "required": ["name", "start", "end"]
      }
    },
    "youtrackBaseUrl": {
      "type": "string",
      "title": "YouTrack URL (fallback)",
      "default": ""
    },
    "youtrackToken": {
      "type": "string",
      "title": "YouTrack токен (fallback)",
      "default": ""
    }
  }
}
